<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/offline_view"
    android:gravity="center"
    android:visibility="gone">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/app_text_size_medium"
    android:gravity="center"
    android:layout_marginLeft="@dimen/dimen_32"
    android:layout_marginRight="@dimen/dimen_32"
    android:text="@string/app_internet_connection_error_with_retry"/>

    <TextView
        android:id="@+id/btn_retry"
        android:layout_width="@dimen/dimen_72"
        android:layout_height="@dimen/dimen_40"
        android:text="@string/app_internet_connection_retry_btn"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="@drawable/rounded_rectangle_empty"
        android:textSize="@dimen/app_text_size_medium"/>
</LinearLayout>